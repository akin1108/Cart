<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/allergy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/allergic"
            />

        <ImageView
            android:id="@+id/anesthetics"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            android:src="@drawable/anesthetics"
            />

        <ImageView
            android:id="@+id/cardiac"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            android:src="@drawable/cardiology"
            />

        <ImageView
            android:id="@+id/cns"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cns"
            android:scaleType="fitXY"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/contraciptive"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/contracipation"
            />

        <ImageView
            android:id="@+id/digestion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/digestive_system"
            android:layout_marginStart="15dp"
            />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ears"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/eyes"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/hairs"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/hairs"
            />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            android:src="@drawable/nose"
            />

        <ImageView
            android:id="@+id/nutrition"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            android:src="@drawable/nutrition"
            />

        <ImageView
            android:id="@+id/pain"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pain"
            android:scaleType="fitXY"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/reproduction"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/reproductive"
            />

        <ImageView
            android:id="@+id/respiration"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/respiratory"
            android:layout_marginStart="15dp"
            />

        <ImageView
            android:id="@+id/skin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/skin"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            />

        <ImageView
            android:id="@+id/urinary"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/urinary"
            android:scaleType="fitXY"
            android:layout_marginStart="15dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/check_orders_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Maintain Products"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

</RelativeLayout>